package com.in28minutes.learnspringframework.game;

public class GameRunner {

	private GamingConsole game;
	/*
	 * Because of this constructor GameRunner will accept ContraGame object
	 * this is tightly coupled class to ContraGame
	 */
	public GameRunner(GamingConsole game) {
		this.game=game;
	}

	public void runGame() {
		game.up();
		game.down();
		game.right();
		game.left();
		
	}

}
